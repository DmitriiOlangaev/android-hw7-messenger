<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/message_background"
    tools:ignore="SpUsage">

    <TextView
        android:id="@+id/senderName"
        android:layout_width="0dp"
        android:layout_height="@dimen/messageMetaDataTextViewHeight"
        android:textColor="@color/white"
        android:textSize="@dimen/messageMetaDataTextSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/dateOfMessage"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/dateOfMessage"
        android:layout_width="0dp"
        android:layout_height="@dimen/messageMetaDataTextViewHeight"
        android:textColor="@color/white"
        android:textSize="@dimen/messageMetaDataTextSize"
        app:layout_constraintLeft_toRightOf="@id/senderName"
        app:layout_constraintRight_toLeftOf="@id/messageId"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/messageId"
        android:layout_width="0dp"
        android:layout_height="@dimen/messageMetaDataTextViewHeight"
        android:textColor="@color/white"
        android:textSize="@dimen/messageMetaDataTextSize"
        app:layout_constraintLeft_toRightOf="@id/dateOfMessage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/dataOfMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/senderName">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>